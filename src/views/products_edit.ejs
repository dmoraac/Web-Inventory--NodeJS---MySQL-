<%- include('templates/header') %>

<div class="container_modify">
    <h1>Actualización de Características</h1>
    <div class="content">
        <form action="/updateProduct/<%= data.id %>" method="POST">
            <input type="text" name="id" id="id" value="<%= data.id %>" disabled>
            <input type="text" name="name" id="name" value="<%= data.name %>">
            <input type="text" name="description" id="description" value="<%= data.description %>">
            <input type="number" name="quantity" id="quantity" value="<%= data.quantity %>">
            <button type="submit" class="btn_update"><span>EDITAR</span><img src="/img/update.png" alt="Botón Editar Datos"></button>
          </form>
    </div>
</div>

<%- include('templates/footer') %>